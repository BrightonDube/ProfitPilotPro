{
  "expo": {
    "name": "BizPilot Mobile",
    "slug": "bizpilot-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "assetBundlePatterns": [],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bizpilot.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan barcodes and capture receipts for business management.",
        "NSFaceIDUsageDescription": "Use Face ID to securely authenticate and access your business data."
      }
    },
    "android": {
      "package": "com.bizpilot.mobile",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.USE_FINGERPRINT",
        "android.permission.USE_BIOMETRIC",
        "android.permission.POST_NOTIFICATIONS"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow BizPilot to access your camera to scan barcodes and capture receipts."
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Use Face ID to securely authenticate and access your business data."
        }
      ],
      "expo-notifications",
      "expo-web-browser",
      "expo-secure-store"
    ],
    "scheme": "bizpilot",
    "experiments": {
      "typedRoutes": true
    }
  }
}
